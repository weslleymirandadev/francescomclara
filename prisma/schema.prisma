generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String           @id @default(cuid())
  name             String?
  email            String?          @unique
  image            String?
  role             UserRole         @default(USER)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  accounts         Account[]
  enrollments      Enrollment[]
  flashcards       Flashcard[]
  forumComments    ForumComment[]
  forumPosts       ForumPost[]
  lessonProgresses LessonProgress[]
  payments         Payment[]
  paymentMethods   PaymentMethod[]
  sessions         Session[]
  passwords        UserPassword?
}

model UserPassword {
  id        String   @id @default(uuid())
  userId    String   @unique
  hash      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RoleEmail {
  id        String   @id @default(cuid())
  email     String   @unique
  role      UserRole
  createdAt DateTime @default(now())
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
}

model Objective {
  id         String   @id @default(cuid())
  name       String   @unique
  imageUrl   String?
  createdAt  DateTime @default(now())
  color      String?
  icon       String?
  iconRotate Int      @default(0)
  order      Int      @default(0)
  rotation   Int      @default(0)
  tracks     Track[]
}

model Track {
  id                String                  @id @default(cuid())
  name              String
  description       String
  imageUrl          String?
  active            Boolean                 @default(false)
  createdAt         DateTime                @default(now())
  updatedAt         DateTime                @updatedAt
  objectiveId       String
  order             Int                     @default(0)
  enrollments       Enrollment[]
  forumPosts        ForumPost[]
  modules           Module[]
  paymentItems      PaymentItem[]
  subscriptionPlans SubscriptionPlanTrack[]
  objective         Objective               @relation(fields: [objectiveId], references: [id])

  @@index([objectiveId])
  @@index([active])
}

model Module {
  id        String     @id @default(cuid())
  title     String
  order     Int
  cefrLevel CEFRLevel?
  trackId   String
  createdAt DateTime   @default(now())
  isPremium Boolean    @default(false)
  lessons   Lesson[]
  track     Track      @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@index([trackId])
  @@index([order])
}

model Lesson {
  id          String           @id @default(cuid())
  moduleId    String
  title       String
  content     Json
  order       Int
  createdAt   DateTime         @default(now())
  readingText String?
  type        LessonType
  updatedAt   DateTime         @updatedAt
  isPremium   Boolean          @default(false)
  flashcards  Flashcard[]
  module      Module           @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  progress    LessonProgress[]

  @@index([moduleId])
  @@index([type])
  @@index([order])
}

model LessonProgress {
  id        String   @id @default(cuid())
  userId    String
  lessonId  String
  completed Boolean  @default(false)
  updatedAt DateTime @updatedAt
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
}

model Enrollment {
  id        String    @id @default(cuid())
  userId    String
  startDate DateTime  @default(now())
  endDate   DateTime?
  createdAt DateTime  @default(now())
  trackId   String
  track     Track     @relation(fields: [trackId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, trackId])
  @@index([userId])
  @@index([trackId])
}

model Flashcard {
  id        String   @id @default(cuid())
  userId    String
  lessonId  String?
  front     String
  back      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lesson    Lesson?  @relation(fields: [lessonId], references: [id])
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([lessonId])
}

model ForumPost {
  id        String         @id @default(cuid())
  authorId  String
  title     String
  content   Json
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  trackId   String?
  comments  ForumComment[]
  author    User           @relation(fields: [authorId], references: [id])
  track     Track?         @relation(fields: [trackId], references: [id])

  @@index([trackId])
}

model ForumComment {
  id        String    @id @default(cuid())
  postId    String
  authorId  String
  content   Json
  createdAt DateTime  @default(now())
  author    User      @relation(fields: [authorId], references: [id])
  post      ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Payment {
  id                 String            @id @default(cuid())
  userId             String
  mpPaymentId        String            @unique
  status             String
  amount             Int
  metadata           Json?
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  subscriptionPlanId String?
  subscriptionPlan   SubscriptionPlan? @relation(fields: [subscriptionPlanId], references: [id])
  user               User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  items              PaymentItem[]
  paymentMethod      PaymentMethod?
  refunds            Refund[]

  @@index([status])
  @@index([createdAt])
  @@index([subscriptionPlanId])
}

model PaymentItem {
  id          String   @id @default(cuid())
  paymentId   String
  quantity    Int      @default(1)
  price       Int
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  trackId     String?
  payment     Payment  @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  track       Track?   @relation(fields: [trackId], references: [id])

  @@index([paymentId])
  @@index([trackId])
}

model Refund {
  id         String   @id @default(cuid())
  paymentId  String
  mpRefundId String?
  status     String
  amount     Int
  createdAt  DateTime @default(now())
  payment    Payment  @relation(fields: [paymentId], references: [id], onDelete: Cascade)

  @@index([paymentId])
}

model PaymentMethod {
  id          String   @id @default(cuid())
  userId      String
  paymentId   String?  @unique
  last4Digits String
  brand       String
  holderName  String
  expiryMonth Int
  expiryYear  Int
  mpCardToken String?
  mpCardId    String?
  isDefault   Boolean  @default(false)
  isActive    Boolean  @default(true)
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  payment     Payment? @relation(fields: [paymentId], references: [id])
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([paymentId])
  @@index([isDefault])
  @@index([isActive])
}

model SubscriptionPlan {
  id              String                  @id @default(cuid())
  name            String
  description     String?
  monthlyPrice    Int                     // Pre√ßo mensal em centavos
  yearlyPrice     Int                     // Pre√ßo anual em centavos
  discountPrice   Int?                    // Pre√ßo com desconto em centavos (opcional)
  discountEnabled Boolean                 @default(false)
  isBestValue     Boolean                 @default(false)
  type            SubscriptionPlanType    // INDIVIDUAL ou FAMILY
  period          SubscriptionPlanPeriod?  // MONTHLY ou YEARLY (mantido para compatibilidade, pode ser null)
  price           Int?                    // Pre√ßo em centavos (mantido para compatibilidade, pode ser null)
  features        Json?                   // Lista de features do plano
  tracks          SubscriptionPlanTrack[]
  payments        Payment[]               // Pagamentos associados a este plano
  active          Boolean                 @default(true)
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt

  @@index([type])
  @@index([period])
  @@index([active])
}

model SubscriptionPlanTrack {
  id                 String           @id @default(cuid())
  subscriptionPlanId String
  trackId            String?
  subscriptionPlan   SubscriptionPlan @relation(fields: [subscriptionPlanId], references: [id], onDelete: Cascade)
  track              Track?           @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@unique([subscriptionPlanId, trackId])
  @@index([subscriptionPlanId])
  @@index([trackId])
}

model SiteSettings {
  id                String   @id @default("settings")
  siteName          String   @default("Franc√™s com Clara")
  supportEmail      String   @default("contato@francescomclara.com")
  stripeMode        Boolean  @default(true)
  maintenanceMode   Boolean  @default(false)
  instagramActive   Boolean  @default(true)
  youtubeActive     Boolean  @default(true)
  whatsappActive    Boolean  @default(true)
  tiktokActive      Boolean  @default(false)
  instagramUrl      String   @default("#")
  youtubeUrl        String   @default("#")
  whatsappUrl       String   @default("#")
  tiktokUrl         String   @default("#")
  updatedAt         DateTime @updatedAt
  highlightColor    String   @default("--clara-rose")
  interfaceIcon     String   @default("/static/franca.png")
  seoDescription    String   @default("Aprenda franc√™s de forma pr√°tica e cultural com a Clara.")
  siteDescription   String   @default("Transformando sua jornada no idioma franc√™s com m√©todo pr√°tico, contexto cultural e tecnologia.")
  siteIcon          String   @default("üå∏")
  siteNameFirstPart String   @default("Franc√™s com")
  siteNameHighlight String   @default("Clara")
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

enum LessonType {
  CLASS
  FLASHCARD
  STORY
  READING
}

enum CEFRLevel {
  A1
  A2
  B1
  B2
  C1
  C2
}

enum SubscriptionPlanType {
  INDIVIDUAL
  FAMILY
}

enum SubscriptionPlanPeriod {
  MONTHLY
  YEARLY
}
