generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

model User {
  id                String           @id @default(cuid())
  name              String?
  username          String?          @unique // O "nome de guerra" no fórum (@joao123)
  bio               String?          @db.Text
  email             String?          @unique
  image             String?
  resetToken        String?          @unique
  resetTokenExpires DateTime?
  role              UserRole         @default(USER)
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  accounts          Account[]
  enrollments       Enrollment[]
  forumComments     ForumComment[]
  forumPosts        ForumPost[]
  lessonProgresses  LessonProgress[]
  payments          Payment[]
  paymentMethods    PaymentMethod[]
  sessions          Session[]
  passwords         UserPassword?
  flashcards        Flashcard[]
}

model UserPassword {
  id        String   @id @default(uuid())
  userId    String   @unique
  hash      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

model RoleEmail {
  id        String   @id @default(cuid())
  email     String   @unique
  role      UserRole
  createdAt DateTime @default(now())
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
}

model Objective {
  id         String   @id @default(cuid())
  name       String   @unique
  imageUrl   String?  @db.Text
  icon       String?
  iconRotate Int      @default(0)
  rotation   Int      @default(0)
  color      String?
  order      Int      @default(0)
  tracks     Track[]
  createdAt  DateTime @default(now())
}

model Track {
  id                String                  @id @default(cuid())
  name              String
  description       String
  objectiveId       String
  objective         Objective               @relation(fields: [objectiveId], references: [id])
  imageUrl          String?
  order             Int                     @default(0)
  active            Boolean                 @default(false)
  modules           Module[]
  enrollments       Enrollment[]
  paymentItems      PaymentItem[]
  subscriptionPlans SubscriptionPlanTrack[]
  forumPosts        ForumPost[]
  createdAt         DateTime                @default(now())
  updatedAt         DateTime                @updatedAt

  @@index([objectiveId])
  @@index([active])
}

model Module {
  id        String     @id @default(cuid())
  trackId   String 
  title     String
  order     Int
  createdAt DateTime   @default(now())
  lessons   Lesson[]
  cefrLevel CEFRLevel?
  track     Track      @relation(fields: [trackId], references: [id], onDelete: Cascade)
  isPremium Boolean    @default(false)

  @@index([trackId])
  @@index([order])
}

model Lesson {
  id          String           @id @default(cuid())
  moduleId    String
  title       String
  type        LessonType
  content     Json
  order       Int
  readingText String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  module      Module           @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  progress    LessonProgress[]
  flashcards  Flashcard[]
  isPremium   Boolean          @default(false)
  forumPosts  ForumPost[]

  @@index([moduleId])
  @@index([type])
  @@index([order])
}

model LessonProgress {
  id        String   @id @default(cuid())
  userId    String
  lessonId  String
  completed Boolean  @default(false)
  updatedAt DateTime @updatedAt
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
}

enum LessonType {
  CLASS      // Aula (vídeo/teoria)
  FLASHCARD  // Flashcard do módulo
  STORY      // Historinha (vídeos simulando contextos reais)
  READING    // Leitura
}

enum CEFRLevel {
  A1 // Iniciante
  A2 // Básico
  B1 // Intermediário
  B2 // Intermediário Avançado
  C1 // Avançado
  C2 // Proficiente
}

model Enrollment {
  id        String    @id @default(cuid())
  userId    String
  trackId   String
  startDate DateTime  @default(now())
  endDate   DateTime?
  createdAt DateTime  @default(now())
  track     Track     @relation(fields: [trackId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, trackId])
  @@index([userId])
  @@index([trackId])
}

model Flashcard {
  id        String   @id @default(cuid())
  userId    String
  lessonId  String?  // Opcional: pode ser criado a partir de uma lição ou manualmente
  front     String   // Frente do flashcard
  back      String   // Verso do flashcard
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson    Lesson?  @relation(fields: [lessonId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([lessonId])
}

model ForumPost {
  id        String         @id @default(cuid())
  authorId  String
  title     String
  content   Json
  trackId   String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  
  author    User           @relation(fields: [authorId], references: [id])
  track     Track?         @relation(fields: [trackId], references: [id], onDelete: SetNull)
  comments  ForumComment[]

  lessonId  String?
  lesson    Lesson?        @relation(fields: [lessonId], references: [id])

  @@index([trackId])
}

model ForumComment {
  id        String    @id @default(cuid())
  postId    String
  authorId  String
  content   Json
  createdAt DateTime  @default(now())
  author    User      @relation(fields: [authorId], references: [id])
  post      ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Payment {
  id                 String            @id @default(cuid())
  userId             String
  user               User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  mpPaymentId        String            @unique
  status             String
  amount             Int
  metadata           Json?
  subscriptionPlanId String? // ID do plano de assinatura associado
  subscriptionPlan   SubscriptionPlan? @relation(fields: [subscriptionPlanId], references: [id], onDelete: SetNull)
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  items              PaymentItem[]
  refunds            Refund[]
  paymentMethod      PaymentMethod?

  @@index([status])
  @@index([createdAt])
  @@index([subscriptionPlanId])
}

model PaymentItem {
  id          String   @id @default(cuid())
  paymentId   String
  trackId     String?  // Agora os itens de pagamento referenciam trilhas
  quantity    Int      @default(1)
  price       Int
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  payment     Payment  @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  track       Track?   @relation(fields: [trackId], references: [id], onDelete: SetNull)

  @@index([paymentId])
  @@index([trackId])
}

model Refund {
  id         String   @id @default(cuid())
  paymentId  String
  mpRefundId String?
  status     String
  amount     Int
  createdAt  DateTime @default(now())
  payment    Payment  @relation(fields: [paymentId], references: [id], onDelete: Cascade)

  @@index([paymentId])
}

model PaymentMethod {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  paymentId   String?  @unique
  payment     Payment? @relation(fields: [paymentId], references: [id], onDelete: SetNull)
  
  last4Digits String
  brand       String    // visa, mastercard, amex, etc
  holderName  String
  expiryMonth Int
  expiryYear  Int
  
  mpCardToken String?   // Token do cartão no Mercado Pago (se disponível)
  mpCardId    String?   // ID do cartão salvo no Mercado Pago
  
  isDefault   Boolean  @default(false)
  isActive    Boolean  @default(true)
  metadata    Json?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([paymentId])
  @@index([isDefault])
  @@index([isActive])
}

enum SubscriptionPlanType {
  INDIVIDUAL
  FAMILY
}

enum SubscriptionPlanPeriod {
  MONTHLY
  YEARLY
}

model SubscriptionPlan {
  id              String                  @id @default(cuid())
  name            String
  description     String?
  price           Int                     // Preço em centavos
  discountPrice   Int?                    // Preço com desconto em centavos (opcional)
  monthlyPrice    Int?
  yearlyPrice     Int?
  discountEnabled Boolean                 @default(false)
  type            SubscriptionPlanType    // INDIVIDUAL ou FAMILY
  period          SubscriptionPlanPeriod   // MONTHLY ou YEARLY
  features        Json?                   // Lista de features do plano
  tracks          SubscriptionPlanTrack[]
  payments        Payment[]               // Pagamentos associados a este plano
  active          Boolean                 @default(true)
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt

  @@index([type])
  @@index([period])
  @@index([active])
}

model SubscriptionPlanTrack {
  id                 String           @id @default(cuid())
  subscriptionPlanId String
  trackId            String?
  subscriptionPlan   SubscriptionPlan @relation(fields: [subscriptionPlanId], references: [id], onDelete: Cascade)
  track              Track?           @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@unique([subscriptionPlanId, trackId])
  @@index([subscriptionPlanId])
  @@index([trackId])
}

model SiteSettings {
  id                String   @id @default("settings")
  siteName          String   @default("Francês com Clara")
  supportEmail      String   @default("contato@francescomclara.com")
  
  stripeMode        Boolean  @default(true)
  maintenanceMode   Boolean  @default(false)

  instagramActive   Boolean  @default(true)
  youtubeActive     Boolean  @default(false)
  whatsappActive    Boolean  @default(false)
  tiktokActive      Boolean  @default(false)

  instagramUrl      String   @default("#")
  youtubeUrl        String   @default("#")
  whatsappUrl       String   @default("#")
  tiktokUrl         String   @default("#")

  siteNameFirstPart String   @default("Francês com")
  siteNameHighlight String   @default("Clara")
  siteIcon          String   @default("/static/flower.svg")
  interfaceIcon     String   @default("/static/franca.png")
  favicon           String   @default("/static/favicon.svg")
  highlightColor    String   @default("--clara-rose")
  siteDescription   String   @default("Transformando sua jornada no idioma francês com método prático, contexto cultural e tecnologia.")

  notifyNewModule     Boolean @default(true)
  notifyPlanExpiring  Boolean @default(true)
  notifyInactivity    Boolean @default(false)
  inactivityDays      Int     @default(7)
  expiringMessage     String? @default("Seu plano está chegando ao fim! Não perca o acesso à sua jornada.")

  updatedAt         DateTime @updatedAt
}