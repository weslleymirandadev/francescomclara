generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String           @id @default(cuid())
  name             String?
  email            String?          @unique
  image            String?
  role             UserRole         @default(USER)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  accounts         Account[]
  enrollments      Enrollment[]
  forumComments    ForumComment[]
  forumPosts       ForumPost[]
  lessonProgresses LessonProgress[]
  payments         Payment[]
  paymentMethods   PaymentMethod[]
  sessions         Session[]
  passwords        UserPassword?
  flashcards       Flashcard[]
}

model UserPassword {
  id        String   @id @default(uuid())
  userId    String   @unique
  hash      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

model RoleEmail {
  id        String   @id @default(cuid())
  email     String   @unique
  role      UserRole
  createdAt DateTime @default(now())
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
}

enum TrackObjective {
  TRAVEL      // Viagens
  WORK        // Trabalho
  FAMILY      // Família
  KNOWLEDGE   // Conhecimento
}

model Track {
  id                String                  @id @default(cuid())
  name              String
  description       String
  objective         TrackObjective          // Objetivo da trilha (viagens, trabalho, família, conhecimento)
  imageUrl          String?
  active            Boolean                 @default(true)
  modules           Module[]
  enrollments       Enrollment[]
  paymentItems      PaymentItem[]
  subscriptionPlans SubscriptionPlanTrack[]
  forumPosts        ForumPost[]
  createdAt         DateTime                @default(now())
  updatedAt         DateTime                @updatedAt

  @@index([objective])
  @@index([active])
}

model Module {
  id        String   @id @default(cuid())
  trackId  String
  title     String
  order     Int
  lessons   Lesson[]
  cefrLevel   CEFRLevel?
  track     Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@index([trackId])
  @@index([order])
}

enum LessonType {
  CLASS      // Aula (vídeo/teoria)
  FLASHCARD  // Flashcard do módulo
  STORY      // Historinha (vídeos simulando contextos reais)
  READING    // Leitura
}

enum CEFRLevel {
  A1
  A2
  B1
  B2
  C1
  C2
}

model Lesson {
  id          String           @id @default(cuid())
  moduleId    String
  title       String
  type        LessonType
  content     Json
  order       Int
  // Campos específicos para leitura
  readingText String?          // Texto da leitura
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  module      Module           @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  progress    LessonProgress[]
  flashcards  Flashcard[]      // Flashcards que podem ser adicionados a partir desta lição

  @@index([moduleId])
  @@index([type])
  @@index([order])
}

model LessonProgress {
  id        String   @id @default(cuid())
  userId    String
  lessonId  String
  completed Boolean  @default(false)
  updatedAt DateTime @updatedAt
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
}

model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  trackId   String
  startDate DateTime @default(now())
  endDate   DateTime?
  createdAt DateTime @default(now())
  track     Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, trackId])
  @@index([userId])
  @@index([trackId])
}

model Flashcard {
  id          String   @id @default(cuid())
  userId      String
  lessonId    String?  // Opcional: pode ser criado a partir de uma lição ou manualmente
  front       String   // Frente do flashcard
  back        String   // Verso do flashcard
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson      Lesson?  @relation(fields: [lessonId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([lessonId])
}

model ForumPost {
  id        String         @id @default(cuid())
  authorId  String
  title     String
  content   Json
  trackId   String?       // Opcional: pode estar relacionado a uma trilha
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  comments  ForumComment[]
  author    User           @relation(fields: [authorId], references: [id])
  track     Track?         @relation(fields: [trackId], references: [id], onDelete: SetNull)

  @@index([trackId])
}

model ForumComment {
  id        String    @id @default(cuid())
  postId    String
  authorId  String
  content   Json
  createdAt DateTime  @default(now())
  author    User      @relation(fields: [authorId], references: [id])
  post      ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Payment {
  id          String        @id @default(cuid())
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  mpPaymentId String        @unique
  status      String
  amount      Int
  metadata    Json?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  items       PaymentItem[]
  refunds     Refund[]
  paymentMethod PaymentMethod?

  @@index([status])
  @@index([createdAt])
}

model PaymentItem {
  id          String   @id @default(cuid())
  paymentId   String
  trackId     String?  // Agora os itens de pagamento referenciam trilhas
  quantity    Int      @default(1)
  price       Int
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  payment     Payment  @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  track       Track?   @relation(fields: [trackId], references: [id], onDelete: SetNull)

  @@index([paymentId])
  @@index([trackId])
}

model Refund {
  id         String   @id @default(cuid())
  paymentId  String
  mpRefundId String?
  status     String
  amount     Int
  createdAt  DateTime @default(now())
  payment    Payment  @relation(fields: [paymentId], references: [id], onDelete: Cascade)

  @@index([paymentId])
}

model PaymentMethod {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  paymentId     String?   @unique
  payment       Payment?  @relation(fields: [paymentId], references: [id], onDelete: SetNull)
  
  last4Digits   String
  brand         String    // visa, mastercard, amex, etc
  holderName    String
  expiryMonth   Int
  expiryYear    Int
  
  mpCardToken   String?   // Token do cartão no Mercado Pago (se disponível)
  mpCardId      String?   // ID do cartão salvo no Mercado Pago
  
  isDefault     Boolean   @default(false)
  isActive      Boolean   @default(true)
  metadata      Json?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@index([paymentId])
  @@index([isDefault])
  @@index([isActive])
}

enum SubscriptionPlanType {
  INDIVIDUAL
  FAMILY
}

enum SubscriptionPlanPeriod {
  MONTHLY
  YEARLY
}

model SubscriptionPlan {
  id              String                  @id @default(cuid())
  name            String
  description     String?
  price           Int                     // Preço em centavos
  discountPrice   Int?                    // Preço com desconto em centavos (opcional)
  discountEnabled Boolean                 @default(false)
  type            SubscriptionPlanType    // INDIVIDUAL ou FAMILY
  period          SubscriptionPlanPeriod   // MONTHLY ou YEARLY
  features        Json?                   // Lista de features do plano
  tracks          SubscriptionPlanTrack[]
  active          Boolean                 @default(true)
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt

  @@index([type])
  @@index([period])
  @@index([active])
}

model SubscriptionPlanTrack {
  id                 String            @id @default(cuid())
  subscriptionPlanId String
  trackId            String?
  subscriptionPlan   SubscriptionPlan  @relation(fields: [subscriptionPlanId], references: [id], onDelete: Cascade)
  track              Track?            @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@unique([subscriptionPlanId, trackId])
  @@index([subscriptionPlanId])
  @@index([trackId])
}
